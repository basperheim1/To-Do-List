<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://kit.fontawesome.com/3133c2d432.js" crossorigin="anonymous"></script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <link rel="stylesheet" href="/styles/design.css">
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="bigger-container">
        <div class="big-container">
            <% if (locals.tasks){%>
            <% tasks.forEach((element)=>{
                %> <div class="box">
                        <input class="check" type="checkbox">
                        <p> <%= element %></p>
                    </div>
            <%})
            }%>
            <div class="box">
                <form action="/week" method="post">
                    <input class="input-field" type="text" name="task">
                    <button class="input-field" type="submit">+</button>
                </form>
            </div>
        </div>
    </div>  
    
</body>
</html>